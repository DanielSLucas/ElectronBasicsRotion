{
  "name": "rotion",
  "productName": "Rotion",
  "version": "0.0.0",
  "description": "A Notion alternative written with Electron",
  "main": "./out/main/index.js",
  "author": "daniellucas",
  "homepage": "https://electron-vite.org",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@tanstack/react-query": "^5.81.2",
    "@tiptap/extension-document": "^2.22.3",
    "@tiptap/extension-highlight": "^2.22.3",
    "@tiptap/extension-placeholder": "^2.22.3",
    "@tiptap/extension-typography": "^2.22.3",
    "@tiptap/react": "^2.22.3",
    "@tiptap/starter-kit": "^2.22.3",
    "app-root-dir": "^1.0.2",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-router-dom": "^2.1.0",
    "electron-store": "^10.1.0",
    "phosphor-react": "^1.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rocketseat/eslint-config": "3.0.12",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/app-root-dir": "^0.1.4",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "extraFiles": [
      {
        "from": "resources/win",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
